</nav>

<section class="log-out">
    <h2>Account Settings</h2>
    <button class="log-out-btn" onclick="confirmLogout()">Log Out</button>
</section>

<script>
    function confirmLogout() {
        const confirm_action = confirm("Are you sure you want to log out?");

        if(confirm_action) {
            fetch('../logout', {
                method: 'POST',
                body: true,
            })
            .then(() => {
                window.location.replace('/');
            })
            .catch((error) => {
                console.error('Error: ', error);
            });
        }
    }
</script>
</body>
</html>