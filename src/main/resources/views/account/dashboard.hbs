<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Dashboard</title>
        <link rel="stylesheet" href="../assets/static/css/account/dashboard.css">
    </head>
    <body>
        <div class="header">
            <h1>Account Dashboard</h1>
        </div>

        <nav class="navbar">
            <a class="active" href="/account/dashboard">Home</a>
            <a href="/account/transactions">Transactions</a>
            <a href="/account/summary">Account Summary</a>
            <a href="/account/settings">Settings</a>
        </nav>

        <section class="acc-overview">
            <h2>Account Overview</h2>

            <p><b>Account Holder: </b>{{account.name}}</p>
            <p><b>Account ID: </b>{{account.uuid}}</p>
            <p><b>Current Balance: </b>£{{account.bal}}</p>
        </section>

        <section class="tables-container">
            <div class="transactions">
                <h2>Income</h2>

                <table>
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Description</th>
                            <th>Amount</th>
                        </tr>
                    </thead>

                    <tbody>
                    {{#each income}}
                        <tr>
                            <td>{{timestamp}}</td>
                            <td>{{sender}}</td>
                            <td>+ £{{amount}}</td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>

                <a href="/account/transactions">View More</a>
            </div>

            <div class="transactions">
                <h2>Outgoings</h2>

                <table>
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Recipient</th>
                            <th>Amount</th>
                        </tr>
                    </thead>

                    <tbody>
                    {{#each outgoings}}
                        <tr>
                            <td>{{timestamp}}</td>
                            <td>{{recipient}}</td>
                            <td>- £{{amount}}</td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>

                <a href="/account/transactions">View More</a>
            </div>
        </section>
    </body>
</html>