<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Settings</title>
        <link rel="stylesheet" href="../assets/static/css/account/settings.css">
    </head>
    <body>
        <div class="header">
            <h1>Settings</h1>
        </div>

        <nav class="navbar">
            <a href="/account/dashboard">Home</a>
            <a href="/account/transactions">Transactions</a>
            <a href="/account/summary">Account Summary</a>
            <a class="active" href="/account/settings">Settings</a>
        </nav>

        <section class="log-out">
            <h2>Account Settings</h2>
            <button class="log-out-btn" onclick="confirmLogout()">Log Out</button>
        </section>

        <script>
            function confirmLogout() {
                const confirm_action = confirm("Are you sure you want to log out?");

                if(confirm_action) {
                    fetch('../logout', {
                        method: 'POST',
                        body: true,
                    })
                    .then(() => {
                        window.location.replace('/');
                    })
                    .catch((error) => {
                        console.error('Error: ', error);
                    });
                }
            }
        </script>
    </body>
</html>